<launch>
  <param name="/use_sim_time" value="true"/>

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="scan_topic" value="/front_laser/scan"/>
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />
    <param name="map_frame" value="map" />
    <param name="pub_map_odom_transform" value="true"/>
    <param name="map_resolution" value="0.05"/>
    <param name="map_size" value="2048"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5"/>
    <param name="map_update_distance_thresh" value="0.4"/>
    <param name="map_update_angle_thresh" value="0.06" />
    <param name="laser_max_dist" value="20.0"/>
    <param name="laser_min_dist" value="0.22"/> </node>

  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <remap from="map" to="/map"/> 
    
    <param name="controller_frequency" value="5.0"/> 
    <param name="planner_frequency" value="2.0"/>

    <param name="transform_tolerance" value="1.0"/> 

    <param name="recovery_behavior_enabled" value="false"/> 
    <param name="clearing_rotation_allowed" value="false"/>

    <rosparam file="$(find amr-ros-config)/nav_config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find amr-ros-config)/nav_config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find amr-ros-config)/nav_config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find amr-ros-config)/nav_config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find amr-ros-config)/nav_config/base_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="/sim_p3at/cmd_vel"/>
    <remap from="scan" to="/front_laser/scan"/>
  </node>
</launch>
